<%= render "navbar" %>
<div class="banner_show">
  <h1 class="text-white"><%= @list.name  %></h1>
</div>


<div class="cards">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="m-3 card-category">
      <img class="picture" src="<%= bookmark.movie.poster_url %>" alt="movie">
      <p><%= bookmark.movie.title %> <%= bookmark.movie.rating %></p>
      <%= bookmark.movie.overview %>
      <div class="d-flex justify-content-between">
        <%= bookmark.comment %>
        <%= link_to "delete", bookmark_path(bookmark),
                      data: {
                        turbo_method: :delete,
                        turbo_confirm: 'êtes-vous sûr?'
                      } %>
      </div>
    </div>
  <% end %>
</div>





<%= link_to "add a movie", new_list_bookmark_path(@list) %>
